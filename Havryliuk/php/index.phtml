</head>
<body>
<div class="product-list">
    <?php if($name): ?>
    <h1><?= $name; ?></h1>
    <?php endif; ?>
    <?php foreach ($block->getData() as $products): ?>
    <div class="product-gallery">
       <div class="product-item">
           <img src="<?= $products['img'] ?>" alt="" class="gal">
           <p class="item-title"><a href="#"><?= $products['title']; ?></a></p>
           <div class="action">
               <?php if ($products['actions']['bestsellers'] == true): ?>
                   <p class="action">Category: bestsellers</p>
               <?php endif; ?>
               <?php if ($products['actions']['eco'] == true): ?>
                   <p class="action">Category: eco</p>
               <?php endif; ?>
               <?php if ($products['actions']['new'] == true): ?>
                   <p class="action">Category: new</p>
               <?php endif; ?>
           </div>
           <div class="stars">
               <?php for ($i=0; $i<$products['rating']; $i++): ?>
                   <span style="color: gold">✩</span>
               <?php endfor; ?>
