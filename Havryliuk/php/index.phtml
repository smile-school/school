                   <span>✩</span>
               <?php endfor; ?>
           </div>
            <div class="price order">
                <?php if ($products['price']['finalPrice'] == $products['price']['oldPrice']):?>
                    <p class="finalprice"><?= $products['price']['finalPrice']; ?> USD</p>
                <?php else: ?>
                    <p class="oldprice"><?= $products['price']['oldPrice']; ?></p>
                    <div class="discount" data-parent="Discount =>"><p>-<?= round(100 - ($products['price']['finalPrice'] / $products['price']['oldPrice'] * 100)); ?>%</p></div>
                    <p class="finalprice"><?= $products['price']['finalPrice']; ?> USD</p>
                <?php endif; ?>
            </div>
           <form class="order-now">
               <label for="submit" class="order"><a href="<?=$products['url'];?>"></a></label>
               <input type="submit" name="Order" value="Order" id="order">
           </form>
       </div>
    </div>
    <?php endforeach; ?>
</div>
